{
  "manifest_version": 2,
  "name": "AllChat",
  "version": "1.4",
  "description": "Send messages to multiple AI chatbots.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Open AllChat"
  },
  "permissions": [
    "storage", "webRequest", "webRequestBlocking",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://www.perplexity.ai/*",
    "https://chat.deepseek.com/*",
    "https://v0.dev/*",
    "https://lovable.dev/*"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://www.perplexity.ai/*",
        "https://chat.deepseek.com/*",
        "https://v0.dev/*",
        "https://lovable.dev/*"
      ],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "allchat@meptl.com"
    }
  }
}
